<body>

    <?php
    
        $fb = $this->filebrowser->get('mediabrowser')
            ->width('100%')->height('100%')
            ->showinfo(true)
            ->useMeta(true);
    
        if($this->application->request->has('root')){

            list($source, $path) = explode(':', $this->application->request->root, 2);

            $fb->root($source, $path);

        }

        echo $fb;
    ?>

    <?=$this->post();?>

    <script>
    $(document).ready(function(){
        $('#mediabrowser').on('select', function(e, item){
            window.open(item[0].link, '_blank');
        });
    });
    </script>

</body>
</html>
